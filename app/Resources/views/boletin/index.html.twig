{% extends 'base.html.twig' %}

{% block content %}
    <h1>Lista Salidas Temporarias</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Agente</th>
                <th>Dni</th>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Destino</th>
                <th>Hora salida</th>
                <th>Hora regreso</th>
                <th>Tiempo total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for boletin in boletins %}
            <tr>
                <td><a href="{{ path('boletin_show', { 'id': boletin.id }) }}">{{ boletin.id }}</a></td>
                <td>{{ boletin.agente }}</td>
                <td>{{ boletin.dni }}</td>
                <td>{% if boletin.fecha %}{{ boletin.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ boletin.tipo }}</td>
                <td>{{ boletin.destino }}</td>
                <td>{% if boletin.horaSalida %}{{ boletin.horaSalida|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if boletin.horaRegreso %}{{ boletin.horaRegreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ boletin.tiempoTotal }}</td>
                <td>
                    <ul>
                        {# En un futuro estas acciones no deberian ser visibles para todos #}
                        <li>
                            <a href="{{ path('boletin_show', { 'id': boletin.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('boletin_edit', { 'id': boletin.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary btn-lg" style="width:202px" href="{{ path('boletin_new') }}">Nuevo boletin</a> 
            <a class="btn btn-primary btn-lg" style="width:202px" href="{{ path('homepage') }}">Volver</a>
        </li>
    </ul> 
    
{% endblock %}
